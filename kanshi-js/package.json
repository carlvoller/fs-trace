{
  "name": "kanshi-js",
  "version": "0.1.0",
  "description": "An easy-to-use, efficient, and performant filesystem watcher",
  "main": "./lib/index.cjs",
  "scripts": {
    "test": "tsc -p tsconfig.build.json && cargo test && npm run cargo-build && mocha -r ts-node/register test/index.test.ts -R spec",
    "cargo-build": "tsc -p tsconfig.build.json &&cargo build --message-format=json-render-diagnostics > cargo.log",
    "cross-build": "tsc -p tsconfig.build.json &&cross build --message-format=json-render-diagnostics > cross.log",
    "postcargo-build": "neon dist < cargo.log",
    "postcross-build": "neon dist -m /target < cross.log",
    "debug": "npm run cargo-build --",
    "build": "npm run cargo-build -- --release",
    "cross": "npm run cross-build -- --release",
    "prepack": "tsc -p tsconfig.build.json &&neon update",
    "version": "neon bump --binaries platforms && git add ."
  },
  "author": "Carl Voller",
  "license": "BSD-3-Clause",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "types": "./lib/index.d.cts",
  "files": [
    "lib/**/*.?({c,m}){t,j}s"
  ],
  "neon": {
    "type": "library",
    "org": "@kanshi-js",
    "platforms": "common",
    "load": "./js/load.cts"
  },
  "devDependencies": {
    "@neon-rs/cli": "^0.1.82",
    "@tsconfig/node20": "^20.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@neon-rs/load": "^0.1.82",
    "mocha": "^11.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlvoller/kanshi.git"
  },
  "bugs": {
    "url": "https://github.com/carlvoller/kanshi/issues"
  },
  "homepage": "https://github.com/carlvoller/kanshi#readme"
}
